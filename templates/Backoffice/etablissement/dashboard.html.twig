                                        {% if page > 1 %}
                                            <a href="{{ path('etablissement_dashboard', {'page': page - 1, 'search': search}) }}" class="px-3 py-2 ml-0 leading-tight text-gray-500 bg-white border border-gray-300 rounded-l-lg hover:bg-gray-100 hover:text-gray-700">Previous</a>
