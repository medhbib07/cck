<script>
document.addEventListener('DOMContentLoaded', function () {
    const map = L.map('map').setView([36.8065, 10.1815], 7); 

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 18,
    }).addTo(map);

