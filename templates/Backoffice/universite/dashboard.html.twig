<!-- Modal for Profile Update -->
<div class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden" id="profile-modal">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Update University Profile</h3>
            <button class="text-gray-500 hover:text-gray-700" onclick="closeProfileModal()">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        <form id="profile-form" action="{{ path('universite_update_profile') }}" method="POST">
            <div class="mb-4">
                <label for="profile-nom" class="block text-sm font-medium text-gray-700">University Name</label>
                <input type="text" id="profile-nom" name="nom" value="{{ universite.nom }}" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" required>
            </div>
            <div class="mb-4">
                <label for="profile-email" class="block text-sm font-medium text-gray-700">Email</label>
                <input type="email" id="profile-email" name="email" value="{{ universite.email }}" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" required>
            </div>
            <div class="mb-4">
                <label for="profile-password" class="block text-sm font-medium text-gray-700">Password (leave blank to keep unchanged)</label>
                <input type="password" id="profile-password" name="password" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
            </div>
            
            
            <div class="flex justify-end">
                <button type="button" class="mr-2 px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200" onclick="closeProfileModal()">Cancel</button>
                <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-md hover:bg-indigo-700">Save</button>
            </div>
        </form>
    </div>
</div>
