                        <div class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 ring-1 ring-black ring-opacity-5">
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Profile</a>
                            <a href="{{ path('app_logout') }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Sign out</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <aside id="sidebar" class="fixed top-0 left-0 z-40 w-64 h-screen transition-transform -translate-x-full md:translate-x-0 bg-white border-r border-gray-200">
        <div class="px-6 py-4">
            <h2 class="text-xl font-semibold text-gray-800">University Dashboard</h2>
        </div>
        <nav class="mt-4">
            <ul class="space-y-1">
                <li>
                    <a href="{{ path('universite_index') }}" class="flex items-center p-3 text-gray-900 rounded-lg hover:bg-gray-100 group">
