            <button onclick="closeModal()" class="text-gray-500 hover:text-gray-700 p-2 rounded-lg hover:bg-gray-100">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
            </button>
        </div>
        
<form action="{{ path('universite_create') }}" id="establishment-form" method="post" enctype="multipart/form-data" class="p-6 space-y-6">            <input type="hidden" name="_token" value="{{ csrf_token('establishment') }}">
            
