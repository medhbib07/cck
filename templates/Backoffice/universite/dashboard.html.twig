</div>

       <!-- Search and Filter Card -->
<div class="bg-white rounded-lg shadow mb-6 p-4">

    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
        {{ form_start(searchForm, {'attr': {'class': 'w-full md:w-auto flex-grow'}}) }}
        <div class="flex flex-col md:flex-row gap-4 w-full">
            <div class="flex-grow">
                {{ form_widget(searchForm.search, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
            </div>
            <div class="w-full md:w-48">
                {{ form_widget(searchForm.type, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
            </div>
            <div>
                {{ form_widget(searchForm.filter, {'attr': {'class': 'w-full bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700'}}) }}
            </div>
        </div>
        {{ form_end(searchForm) }}
        
        <a href="{{ path('universite_index', {'export': 'pdf'}) }}" 
           class="w-full md:w-auto flex items-center justify-center gap-2 text-white bg-red-600 hover:bg-red-700 px-4 py-2 rounded">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
            </svg>
            Export PDF
        </a>
            <button data-modal-target="crud-modal" data-modal-toggle="crud-modal" type="button" class="w-full sm:w-auto flex items-center justify-center text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                Add New
            </button>
    </div>
</div>

<!-- Table Card -->
<div class="bg-white rounded-lg shadow">
    <div class="p-4 border-b border-gray-200 flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
        <h3 class="text-lg font-semibold text-gray-900">
            Registered Institutions
            <span class="text-sm text-gray-500 ml-2">({{ establishments|length }} total)</span>
        </h3>
    </div>
    
    {% if establishments|length > 0 %}
    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left text-gray-500">
            <!-- Table header remains the same -->
            <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3">Name</th>
                    <th scope="col" class="px-6 py-3">Type</th>
                    <th scope="col" class="px-6 py-3">Location</th>
                    <th scope="col" class="px-6 py-3">Status</th>
                    <th scope="col" class="px-6 py-3">Actions</th>
                </tr>
            </thead>
        <tbody>
                        {% for etablissement in establishments %}
                        <tr class="bg-white border-b hover:bg-gray-50">
                            <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-10 w-10">
                                        {% if etablissement.logo %}
                                        <img class="h-10 w-10 rounded-full" src="{{ asset('uploads/logos/' ~ etablissement.logo) }}" alt="Logo">
                                        {% else %}
                                        <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center">
                                            <span class="text-blue-600 text-sm">{{ etablissement.nom|first|upper }}</span>
                                        </div>
                                        {% endif %}
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-base font-semibold">{{ etablissement.nom }}</div>
                                        <div class="text-sm text-gray-500">{{ etablissement.email }}</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="px-3 py-1 text-sm font-medium rounded-full 
                                    {% if etablissement.etype == 'Publique' %}bg-green-100 text-green-800
                                    {% else %}bg-purple-100 text-purple-800{% endif %}">
                                    {{ etablissement.etype }}
                                </span>
                            </td>
                            <td class="px-6 py-4">{{ etablissement.localisation }}</td>
                            <td class="px-6 py-4">
                                <span class="px-2.5 py-0.5 text-sm font-medium rounded-full bg-green-100 text-green-800">Active</span>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center space-x-4">
                                    <button data-modal-target="crud-modal" data-modal-toggle="crud-modal" type="button" class="text-blue-600 hover:text-blue-900 flex items-center">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                                        </svg>
                                        Edit
                                    </button>
                                    <form action="{{ path('universite_delete', {'id': etablissement.id}) }}" method="post">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ etablissement.id) }}">
                                        <button type="submit" onclick="return confirm('Are you sure?')" class="text-red-600 hover:text-red-900 flex items-center">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                            </svg>
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
        </table>
    </div>
    {% else %}
    <div class="p-8 text-center text-gray-500">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No establishments found</h3>
        <p class="mt-1 text-sm text-gray-500">Try adjusting your search or filter criteria</p>
    </div>
    {% endif %}
</div>
