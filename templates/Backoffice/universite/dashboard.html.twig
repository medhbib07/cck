<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {

   window.openProfileModal = function () {
    const modal = document.getElementById('profile-modal');
    if (modal) {
        modal.classList.remove('hidden');
        modal.classList.add('flex');
    }
};

window.closeProfileModal = function () {
    const modal = document.getElementById('profile-modal');
    if (modal) {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
    }
};

    // === Chart.js: Type Chart (Doughnut) ===
    const typeCtx = document.getElementById('typeChart');
    if (typeCtx) {
        new Chart(typeCtx.getContext('2d'), {
            type: 'doughnut',
            data: {
                labels: ['Publique', 'Privé'],
                datasets: [{
                    data: [{{ stats.public_count }}, {{ stats.private_count }}],
                    backgroundColor: [
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(153, 102, 255, 0.7)'
                    ],
                    borderColor: [
                        'rgba(54, 162, 235, 1)',
                        'rgba(153, 102, 255, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { position: 'bottom' } }
            }
        });
    }

    // === Chart.js: Location Chart (Bar) ===
    const locationCtx = document.getElementById('locationChart');
    if (locationCtx) {
        new Chart(locationCtx.getContext('2d'), {
            type: 'bar',
            data: {
                labels: {{ stats.location_data|map(l => l.location)|json_encode|raw }},
                datasets: [{
                    label: 'Institutions per Location',
                    data: {{ stats.location_data|map(l => l.count)|json_encode|raw }},
                    backgroundColor: 'rgba(75, 192, 192, 0.7)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: { stepSize: 1 }
                    }
                },
                plugins: { legend: { display: false } }
            }
        });
    }
//student chart 
const studentsCtx = document.getElementById('studentsChart');
    if (studentsCtx) {
        new Chart(studentsCtx.getContext('2d'), {
            type: 'bar',
            data: {
                labels: {{ stats.students_per_etablissement|map(e => e.name)|json_encode|raw }},
                datasets: [{
                    label: 'Nombre d\'étudiants',
                    data: {{ stats.students_per_etablissement|map(e => e.students)|json_encode|raw }},
                    backgroundColor: 'rgba(153, 102, 255, 0.7)',
                    borderColor: 'rgba(153, 102, 255, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
    }

    // === Chart.js: Students by Establishment Type (Doughnut) ===

    // === Table Search Filter ===
    const tableSearchInput = document.getElementById('table-search');
    if (tableSearchInput) {
        tableSearchInput.addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('tbody tr');
            rows.forEach(row => {
                const name = row.querySelector('td:first-child').textContent.toLowerCase();
                row.style.display = name.includes(searchTerm) ? '' : 'none';
            });
        });
    }

    // === User Dropdown Toggle ===
    const dropdownToggle = document.getElementById('user-menu-button');
    const dropdownMenu = document.getElementById('user-dropdown');
    if (dropdownToggle && dropdownMenu) {
        dropdownToggle.addEventListener('click', function(e) {
            e.stopPropagation();  // Prevent dropdown from closing immediately
            dropdownMenu.classList.toggle('hidden');
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
            if (!dropdownMenu.contains(e.target) && !dropdownToggle.contains(e.target)) {
                dropdownMenu.classList.add('hidden');
            }
        });
    }


    


    // === Modal logic ===
    const modal = document.getElementById('crud-modal');
    const modalTitle = document.getElementById('modal-title');
    const establishmentForm = document.getElementById('establishment-form');
    const establishmentIdInput = document.getElementById('establishment-id');

    window.openModal = function(button = null) {
        if (!modal) return;

        const isEdit = button && button.dataset.id;

        if (isEdit) {
            const id = button.dataset.id;
            modalTitle.textContent = "Modifier l'établissement";
            if (establishmentIdInput) establishmentIdInput.value = id;
            establishmentForm.action = "{{ path('universite_update', {'id': 'PLACEHOLDER'}) }}".replace('PLACEHOLDER', id);

            document.getElementById('nom').value = button.dataset.nom || '';
            document.getElementById('siteweb').value = button.dataset.siteweb || '';
            document.getElementById('adresse').value = button.dataset.adresse || '';
            document.getElementById('ville').value = button.dataset.ville || '';
            document.getElementById('code_postal').value = button.dataset.code_postal || '';
            document.getElementById('latitude').value = button.dataset.latitude || '';
            document.getElementById('longitude').value = button.dataset.longitude || '';
            document.getElementById('capacite').value = button.dataset.capacite || '';
            document.getElementById('description').value = button.dataset.description || '';
            document.getElementById('date_creation').value = button.dataset.date_creation || '';
            document.getElementById('email').value = button.dataset.email || '';
            document.getElementById('etype').value = button.dataset.etype || '';
           

            // Initialize map with lat/lng
            if (typeof initMapWithLatLng === 'function') {
                const lat = parseFloat(button.dataset.latitude);
                const lng = parseFloat(button.dataset.longitude);
                if (!isNaN(lat) && !isNaN(lng)) {
                    initMapWithLatLng(lat, lng);
                }
            }

        } else {
            modalTitle.textContent = "Nouveau Etablissement";
            if (establishmentIdInput) establishmentIdInput.value = '';
            establishmentForm.action = "{{ path('universite_create') }}";

            // Reset form
            const fields = ['nom', 'siteweb', 'adresse', 'ville', 'code_postal', 'latitude', 'longitude',
                            'capacite', 'description', 'date_creation', 'email', 'etype'];
            fields.forEach(id => {
                if (document.getElementById(id)) {
                    document.getElementById(id).value = '';
                }
            });

            if (typeof resetMap === 'function') {
                resetMap();
            }
        }

        modal.classList.remove('hidden');
        modal.classList.add('flex');
    };

    window.closeModal = function() {
        if (!modal) return;
        modal.classList.add('hidden');
        modal.classList.remove('flex');
    };

    if (modal) {
        modal.addEventListener('click', function(e) {
            if (e.target === modal) closeModal();
        });
    }

    // === Password toggle ===
    const togglePassword = document.querySelector('.toggle-password');
    const passwordInput = document.getElementById('inputPassword');
    if (togglePassword && passwordInput) {
        togglePassword.addEventListener('click', function() {
            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);
            this.querySelector('i').classList.toggle('fa-eye-slash');
            this.querySelector('i').classList.toggle('fa-eye');
        });
    }

});
</script>

