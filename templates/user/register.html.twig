{% extends 'user/UserBase.html.twig' %}

{% block title %}Register{% endblock %}

{% block section %}
<section class="sign-in-section section-padding fix">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8">
                <div class="sign-in-items">
                    <div class="title text-center">
                        <h2 class="wow fadeInUp">Create a New Account</h2>
                    </div>
                    
                    <form method="post" action="{{ path('app_register') }}" enctype="multipart/form-data" id="registration-form" class="row g-4">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('register') }}">
                        
                        <!-- Common fields -->
                        <div class="col-lg-12 wow fadeInUp" data-wow-delay=".2s">
                            <div class="form-clt style-2">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required>
                            </div>
                        </div>
                        
                        <div class="col-lg-12 wow fadeInUp" data-wow-delay=".2s">
                            <div class="form-clt style-2">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" id="password" name="password" class="form-control" placeholder="Choose a password" required>
                            </div>
                        </div>
                        
                        <div class="col-lg-12 wow fadeInUp" data-wow-delay=".2s">
                            <div class="form-clt style-2">
                                <label for="role" class="form-label">Account Type</label>
                                <select id="role" name="role" class="form-control" required>
                                    <option value="">Select your role</option>
                                    <option value="ROLE_UNIVERSITE">University</option>
                                    <option value="ROLE_ETABLISSEMENT">Establishment</option>
                                </select>
                            </div>
                        </div>
                        
                        <!-- University fields -->
                        <div id="university-fields" class="col-lg-12" style="display: none;">
                            <div class="wow fadeInUp" data-wow-delay=".2s">
                                <div class="form-clt style-2">
                                    <label for="nom_universite" class="form-label">University Name</label>
                                    <input type="text" id="nom_universite" name="nom_universite" class="form-control" placeholder="Enter university name">
                                </div>
                            </div>
                        </div>
                        
                        <!-- Establishment fields -->
                        <div id="establishment-fields" class="col-lg-12" style="display: none;">
                            <div class="wow fadeInUp" data-wow-delay=".2s">
                                <div class="form-clt style-2">
                                    <label for="nom_etablissement" class="form-label">Establishment Name</label>
                                    <input type="text" id="nom_etablissement" name="nom_etablissement" class="form-control" placeholder="Enter establishment name">
                                </div>
                            </div>
                            
                            <div class="wow fadeInUp" data-wow-delay=".2s">
                                <div class="form-clt style-2">
                                    <label for="etype" class="form-label">Type</label>
                                    <select id="etype" name="etype" class="form-control">
                                        <option value="Publique">Public</option>
                                        <option value="PrivÃ©e">Private</option>
                                    </select>
                                </div>
                            </div>
                            
                            <div class="wow fadeInUp" data-wow-delay=".2s">
                                <div class="form-clt style-2">
                                    <label for="localisation" class="form-label">Location</label>
                                    <input type="text" id="localisation" name="localisation" class="form-control" placeholder="Enter location">
                                </div>
                            </div>
                            
                            <div class="wow fadeInUp" data-wow-delay=".2s">
                                <div class="form-clt style-2">
                                    <label for="logo" class="form-label">Logo</label>
                                    <input type="file" id="logo" name="logo" class="form-control">
                                </div>
                            </div>
                            
                            <div class="wow fadeInUp" data-wow-delay=".2s">
                                <div class="form-clt style-2">
                                    <label for="siteweb" class="form-label">Website</label>
                                    <input type="url" id="siteweb" name="siteweb" class="form-control" placeholder="https://example.com">
                                </div>
                            </div>
                            
                            <div class="wow fadeInUp" data-wow-delay=".2s">
                                <div class="form-clt style-2">
                                    <label for="universite_id" class="form-label">Associated University</label>
                                    <select id="universite_id" name="universite_id" class="form-control">
                                        <option value="">None</option>
                                        {% for universite in universites %}
                                            <option value="{{ universite.id }}">{{ universite.nom }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-4 wow fadeInUp" data-wow-delay=".4s">
                            <button class="theme-btn" type="submit">
                                Register
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const roleSelect = document.getElementById('role');
    const universityFields = document.getElementById('university-fields');
    const establishmentFields = document.getElementById('establishment-fields');

    if (!roleSelect || !universityFields || !establishmentFields) {
        console.error('Required elements not found');
        return;
    }

    function toggleFields() {
        const selectedRole = roleSelect.value;
        universityFields.style.display = 'none';
        establishmentFields.style.display = 'none';
        
        if (selectedRole === 'ROLE_UNIVERSITE') {
            universityFields.style.display = 'block';
        } else if (selectedRole === 'ROLE_ETABLISSEMENT') {
            establishmentFields.style.display = 'block';
        }
    }

    toggleFields();
    roleSelect.addEventListener('change', toggleFields);

    // Form validation
    document.getElementById('registration-form').addEventListener('submit', function(e) {
        const role = roleSelect.value;
        if (!role) {
            e.preventDefault();
            alert('Please select an account type');
        }
    });
});
</script>
{% endblock %}